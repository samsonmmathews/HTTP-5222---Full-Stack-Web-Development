extends layout 

block layout-content 
    h1 Administer menu links 
    a(href="/admin/menu/add") + Add new link
    table 
        thead
            tr 
                th Link 
                th Operations 
        tbody
            each link in menu 
                tr 
                    td #{link.name} (#{link.path})
                    td 
                        form(method="get", action="/admin/menu/delete")
                            input(type="hidden", name="linkId", value=link._id)
                            button(type="submit") Delete 
    a(href="/admin/menu/edit") + Edit new link
    table 
        thead
            tr 
                th Link 
                th Operations 
        tbody
            each link in menu 
                tr 
                    td #{link.name} (#{link.path})
                    td 
                        a(href=`/admin/menu/edit?linkId=${link._id}`) Edit